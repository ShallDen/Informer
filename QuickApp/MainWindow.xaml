<Window x:Class="QuickApp.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                      xmlns:Behaviours="clr-namespace:MahApps.Metro.Behaviours;assembly=MahApps.Metro"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:App="clr-namespace:QuickApp"
                      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                      Name="MyMainWindow"
                      AllowsTransparency="True"
                      Opacity="0.95"
                      ResizeMode="NoResize"
                      WindowStyle="None"
                      Width="89"
                      BorderBrush="#FFA5A7B1"
                      BorderThickness="1,1,0,1"
                      Background="#30313d"
                      MinWidth="0"
                      Title="MainWindow"
                      SourceInitialized="MainWindow_SourceInitialized">

    <i:Interaction.Behaviors>
        <Behaviours:BorderlessWindowBehavior/>
    </i:Interaction.Behaviors>

    <Window.Triggers>
        <EventTrigger RoutedEvent="App:MainWindow.OpenMainWindow">
            <BeginStoryboard HandoffBehavior="Compose">
                <Storyboard  RepeatBehavior="1x" AutoReverse="False">
                    <DoubleAnimation Storyboard.TargetName="MyMainWindow"
                                     Storyboard.TargetProperty = "(Window.Opacity)"
                                     From="0.0"
                                     To="0.9" Duration="0:0:0.2"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
        <EventTrigger RoutedEvent="App:MainWindow.CloseMainWindow">
            <BeginStoryboard HandoffBehavior="Compose">
                <Storyboard  RepeatBehavior="1x" AutoReverse="False">
                    <DoubleAnimation Storyboard.TargetName="MyMainWindow"
                                     Storyboard.TargetProperty = "(Window.Opacity)"
                                     From="0.9"
                                     To="0" Duration="0:0:0.1"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <StackPanel HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center" Width="88">
            <Grid HorizontalAlignment="Left" Height="10" Margin="0,0,0,0" VerticalAlignment="Top" Width="89" MouseEnter="SkypeGrid_MouseEnter" MouseLeave="SkypeGrid_MouseLeave">
                <Border BorderBrush="#FF677F91" BorderThickness="1" HorizontalAlignment="Center" Height="1" Margin="0" VerticalAlignment="Center" Width="70"/>
            </Grid>
            <Grid x:Name="SkypeGrid" Cursor="Hand" HorizontalAlignment="Left" Height="100" Margin="0,0,0,0" VerticalAlignment="Top" Width="89" MouseEnter="SkypeGrid_MouseEnter" MouseLeave="SkypeGrid_MouseLeave">
                <Border x:Name="SkypeGridBorder" BorderBrush="#23242e" BorderThickness="0,1,0,1" Visibility="Collapsed" />
                <Button Style="{StaticResource MaterialDesignFloatingActionLightButton}"
                        BorderBrush="#30313d"
                        materialDesign:ShadowAssist.ShadowDepth="Depth0"
                        Margin="0,10,0,0" HorizontalAlignment="Center"
                        Width="59" Height="59" VerticalAlignment="Top">
                    <Button.Background>
                        <ImageBrush ImageSource="Resources/skype-flat.png" />
                    </Button.Background>
                </Button>
                <Label Content="Skype" FontFamily="Roboto Condensed Light" FontSize="16" Foreground="#CAD2E0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="89" Height="33" HorizontalContentAlignment="Center"/>
            </Grid>
            <Grid x:Name="CalculatorGrid" Cursor="Hand" HorizontalAlignment="Left" Height="100" Margin="0,0,0,0" VerticalAlignment="Top" Width="89" MouseEnter="CalculatorGrid_MouseEnter" MouseLeave="CalculatorGrid_MouseLeave">
                <Border x:Name="CalculatorGridBorder" BorderBrush="#23242e" BorderThickness="0,1,0,1" Visibility="Collapsed" />
                <Button Style="{StaticResource MaterialDesignFloatingActionLightButton}"
                        BorderBrush="#30313d"
                        materialDesign:ShadowAssist.ShadowDepth="Depth0"
                        Margin="0,10,0,0" HorizontalAlignment="Center"
                        Width="59" Height="59" VerticalAlignment="Top">
                    <Button.Background>
                        <ImageBrush ImageSource="Resources/calculator-icon.png" />
                    </Button.Background>
                </Button>
                <!--<Image HorizontalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality" Height="57" VerticalAlignment="Top" Source="Resources/calculator-icon.png" UseLayoutRounding="False" Margin="0,10,0,0"/>-->
                <Label Content="Calculator" FontFamily="Roboto Condensed Light" FontSize="16" Foreground="#CAD2E0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="89" Height="33" HorizontalContentAlignment="Center"/>
            </Grid>
            <Grid x:Name="CalendarGrid" Cursor="Hand" HorizontalAlignment="Left" Height="100" Margin="0,0,0,0" VerticalAlignment="Top" Width="89" MouseEnter="CalendarGrid_MouseEnter" MouseLeave="CalendarGrid_MouseLeave">
                <Border x:Name="CalendarGridBorder" BorderBrush="#23242e" BorderThickness="0,1,0,1" Visibility="Collapsed" />
                <Button Style="{StaticResource MaterialDesignFloatingActionLightButton}"
                        BorderBrush="#30313d"
                        materialDesign:ShadowAssist.ShadowDepth="Depth0"
                        Margin="0,10,0,0" HorizontalAlignment="Center"
                        Width="59" Height="59" VerticalAlignment="Top">
                    <Button.Background>
                        <ImageBrush ImageSource="Resources/calendar-icon.png" />
                    </Button.Background>
                </Button>
                <Label Content="Calendar" FontFamily="Roboto Condensed Light" FontSize="16" Foreground="#CAD2E0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="89" Height="33" HorizontalContentAlignment="Center"/>
            </Grid>
            <Grid x:Name="AddGrid" Cursor="Hand" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="89" MouseEnter="AddGrid_MouseEnter" MouseLeave="AddGrid_MouseLeave" Height="40">
                <Border x:Name="AddGridBorder" BorderBrush="#23242e" BorderThickness="0,1,0,1" Visibility="Collapsed" />
                <Image HorizontalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality" VerticalAlignment="Center" Source="Resources/threedot.gif" UseLayoutRounding="False" Margin="0" Width="35"/>
               <!-- <Label Content="..." FontFamily="Roboto Condensed Light" FontSize="28" Foreground="#CAD2E0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="89" Height="42" HorizontalContentAlignment="Center" Margin="0,0,0,14"/>-->
            </Grid>
            <Grid HorizontalAlignment="Left" Height="10" Margin="0,0,0,0" VerticalAlignment="Top" Width="89" MouseEnter="SkypeGrid_MouseEnter" MouseLeave="SkypeGrid_MouseLeave">
                <Border BorderBrush="#FF677F91" BorderThickness="1" HorizontalAlignment="Center" Height="1" Margin="0" VerticalAlignment="Center" Width="70"/>
            </Grid>
        </StackPanel>
        <!--<Image HorizontalAlignment="Left" RenderOptions.BitmapScalingMode="HighQuality" Height="57" Margin="17,143,0,0" VerticalAlignment="Top" Width="62" Source="Resources/calculator-icon.png" UseLayoutRounding="False"/>
        <Label Content="Calcuator" HorizontalAlignment="Left" Margin="12,201,0,0" VerticalAlignment="Top" Width="69" FontFamily="Roboto Condensed Light" FontSize="16" Foreground="#CAD2E0"/>
        <Image HorizontalAlignment="Left" RenderOptions.BitmapScalingMode="HighQuality" Height="57" Margin="17,254,0,0" VerticalAlignment="Top" Width="62" Source="Resources/calendar-icon.png" UseLayoutRounding="False"/>
        <Label Content="Calendar" HorizontalAlignment="Left" Margin="14,311,0,0" VerticalAlignment="Top" Width="64" FontFamily="Roboto Condensed Light" FontSize="16" Foreground="#CAD2E0"/>
        
-->

    </Grid>
</Window>
