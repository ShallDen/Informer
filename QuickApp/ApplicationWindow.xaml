<Window x:Class="QuickApp.ApplicationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickApp"
        mc:Ignorable="d"
        Title="ApplicationWindow" SizeToContent="WidthAndHeight" ResizeMode="NoResize" Height="200" Width="200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock Text="Some panel" FontFamily="Roboto Condensed"/>
        </Grid>
        
        <Grid Grid.Row="1">
            <ContentControl x:Name="ContentMain" Opacity="1" Background="Transparent"/>
        </Grid>

        <Grid Grid.Row="2">
            <TextBlock Text="Some another panel" FontFamily="Roboto Condensed"/>
        </Grid>
    </Grid>
</Window>
